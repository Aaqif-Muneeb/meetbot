{
  "manifest_version": 3,
  "name": "Meetbot",
  "version": "1.0.0",
  "description": "A meeting assistant that records, transcribes, and summarizes meetings",
  "permissions": [
    "sidePanel",
    "storage",
    "downloads",
    "tabs",
    "tabCapture",
    "desktopCapture",
    "activeTab",
    "audioCapture"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contentScript.js"]
    }
  ],
  "action": {
    "default_title": "Meetbot",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "side_panel": {
    "default_path": "src/side-panel/sidePanel.html"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
} 